{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@interfaces/*": ["interfaces/*"],
      "@constants/*": ["constants/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*",
    "components/**/*",
    "interfaces/**/*",
    "constants/**/*"
  ],
  "exclude": ["node_modules"]
}
